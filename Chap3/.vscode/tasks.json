{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Active CUDA (Chap3, preserve path)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/.vscode/build_active_cuda.ps1",
        "-Root", "${workspaceFolder:root}",
        "-File", "${file}"
      ],
      "options": { "cwd": "${workspaceFolder:root}" },
      "problemMatcher": ["$msCompile"],
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}